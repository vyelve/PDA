@model PortViewModel
@{ ViewBag.Title = "Port"; }

<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Create Port</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <form method="post" class="mt-3" id="portform">
                    <div class="form-group row">
                        <label asp-for="PortName" class="col-sm-2 col-form-label">Port Name</label>
                        <div class="col-sm-10">
                            <input id="txtPortName" asp-for="PortName" class="form-control" placeholder="Port Name" autocomplete="off">
                            <span asp-validation-for="PortName" class="text-danger field-validation-valid"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="IsActive" class="col-sm-2 col-form-label">Is Active</label>
                        <div class="col-sm-10">
                            <div>
                                <input type="checkbox" asp-for="IsActive" class="form-check-input" id="chkIsActive"
                                       data-toggle="toggle" data-on="Active" data-off="In Active" data-onstyle="success" data-offstyle="danger">
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <input hidden asp-for="PortID" id="hdnPortID" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3">
                                <center>
                                    <input value="Submit" type="submit" id="btnSubmit" class="btn btn-primary" />
                                    <button type="button" id="btnCancel" class="btn btn-primary">Cancel</button>
                                </center>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Port List</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblPort" class="table table-striped responsive-utilities jambo_table"></table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">

    $(function () {
        $('#chkIsActive').bootstrapToggle('on');
    });

    var jsonData =@Html.Raw(Json.Serialize(Model.TblPort));
    console.log(jsonData);


    window.operateEvents = {
        'click .editport': function (e, value, row, index) {
            var _portModel = new PortModel();
            _portModel.resetPortModel();
            Window.existingModel = row;
            _portModel.setPortModel(row);
        }
    }
</script>
<script src="@Url.Content("~/ApplicationScripts/port.js")"></script>
